<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="bottomNavigationStyle">@style/Widget.MaterialComponents.BottomNavigationView</item>
    </style>

    <style name="Widget.MaterialComponents.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="itemIconTint">@color/white</item>
        <item name="itemTextColor">@color/black</item>
    </style>
    <style name="BottomNavigationActiveIndicator" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemActiveIndicatorStyle">@drawable/active_tab_indicator</item>
    </style>
    <style name="CustomAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Customize the background, padding, etc. -->
        <item name="android:windowBackground">@drawable/rounded_frame</item>
        <!-- Set the text color for the buttons -->
        <item name="android:textColor">@color/custom_button_text_color</item>
        <!-- Adjust other style properties as needed -->
    </style>
    <style name="AlertDialogButtonTextColor">
        <item name="android:textColor">@android:color/black</item>
    </style>
</resources>